<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_collapseMode="parallax"
              app:layout_scrollFlags="scroll|exitUntilCollapsed">
    <!--tools:showIn="@layout/fragment_home"-->

    <com.leo.lu.bannerauto.BannerLayout
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190dp"
        app:indicator_visibility="visible"
        app:pager_animation="Accordion"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_15dp"
                android:src="@drawable/menu_call"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingStart="@dimen/_5dp"
                android:paddingTop="@dimen/_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要倾诉"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="把烦恼大声说出来"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/ll_reserve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_15dp"
                android:src="@drawable/menu_reserve"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingStart="@dimen/_5dp"
                android:paddingTop="@dimen/_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要咨询"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找咨询师解开心结"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_15dp"
                android:src="@drawable/menu_free"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费体验"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="即刻体验专业咨询"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/ll_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_15dp"
                android:src="@drawable/menu_exam"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_15dp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心里测试"/>

                <TextView
                    android:id="@+id/txt_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="840764人测试过"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/_10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_icon"/>

        <com.leo.lu.bannerauto.BannerLayout
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20dp"
            app:indicator_visibility="invisible"
            app:pager_animation="FlipVertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/line_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/_8dp"
        android:text="- 推荐咨询师 -"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2dp">

                    <TextView
                        android:id="@+id/txt_one_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="曹华"
                        android:textSize="@dimen/_14sp"/>

                    <TextView
                        android:id="@+id/txt_one_qualification"
                        style="@style/qualification_st"
                        android:text="国二"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_one_describe"
                    style="@style/suggest_describe_st"
                    android:text="青春成长史"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2dp">

                        <TextView
                            android:id="@+id/txt_two_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="曹华"
                            android:textSize="@dimen/_14sp"/>

                        <TextView
                            android:id="@+id/txt_two_qualification"
                            style="@style/qualification_st"
                            android:text="国二"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_two_describe"
                        style="@style/suggest_describe_st"
                        android:text="青春成长史"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2dp">

                        <TextView
                            android:id="@+id/txt_three_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="曹华"
                            android:textSize="@dimen/_14sp"/>

                        <TextView
                            android:id="@+id/txt_three_qualification"
                            style="@style/qualification_st"
                            android:text="国二"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2dp">

                        <TextView
                            android:id="@+id/txt_four_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="曹华"
                            android:textSize="@dimen/_14sp"/>

                        <TextView
                            android:id="@+id/txt_four_qualification"
                            style="@style/qualification_st"
                            android:text="国二"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>